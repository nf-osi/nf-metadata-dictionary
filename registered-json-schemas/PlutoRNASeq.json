{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://repo-prod.prod.sagebase.org/repo/v1/schema/type/registered/org.synapse.nf-plutornaseq-0.1.0.json",
  "title": "NF2 Sample FASTQ Manifest",
  "description": "Schema for harmonization with Pluto for paired-end FASTQ files to be processed.",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "sample_id",
      "r1_fastq",
      "r2_fastq",
      "diagnosis",
      "tumorType",
      "specimenID",
      "individualID",
      "species"
    ],
    "properties": {
      "sample_id": {
        "type": "string",
        "pattern": "^\\S+$",
        "errorMessage": "Sample id must be provided and cannot contain spaces. This should mirror specimenID, sample, etc.; workflow makes use of this attribute, not specimenID.",
        "meta": ["id"],
        "description": "Unique sample identifier (e.g., MS_1446, MS02_10, MS02_1.all.srtd)."
      },
      "r1_fastq": {
        "type": "string",
        "description": "Read #1 FASTQ file, typically gzipped.",
        "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.f(ast)?q\\.gz$",
        "examples": [
          "1446.all.srtd_1.fastq.gz",
          "MS02_10.1.fastq.gz",
          "some/path/MS02_1.all.srtd_1.fastq.gz"
        ]
      },
      "r2_fastq": {
        "type": "string",
        "description": "Read #2 FASTQ file, typically gzipped. If runType is pairedEnd, this is required.",
        "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.f(ast)?q\\.gz$",
        "examples": [
          "1446.all.srtd_2.fastq.gz",
          "MS02_10.2.fastq.gz",
          "some/path/MS02_1.all.srtd_2.fastq.gz"
        ]
      },
      "diagnosis": {
        "type": "string",
        "description": "Clinical diagnosis for the sample."
      },
      "tumorType": {
        "type": "string",
        "description": "Tumor histology/type."
      },
      "specimenID": {
        "type": "string",
        "description": "Specimen identifier (often mirrors sample).",
        "pattern": "^\\S+$",
        "minLength": 1
      },
      "individualID": {
        "type": "string",
        "description": "Subject/individual identifier (e.g., numeric code or MS02).",
        "pattern": "^\\S+$",
        "minLength": 1
      },
      "species": {
        "type": "string",
        "description": "Scientific name of the organism."
      },
      "runType": {
        "type": "string",
        "description": "Run type."
      },
      "readPair": {
        "type": "string",
        "description": "Indicates whether read 1 or read 2."
      }
    }
  },
  "examples": [
    [
      {
        "sample_id": "MS_1446",
        "r1_fastq": "1446.all.srtd_1.fastq.gz",
        "r2_fastq": "1446.all.srtd_2.fastq.gz",
        "diagnosis": "Neurofibromatosis type 2",
        "tumorType": "Tissue-derived Schwannoma",
        "specimenID": "MS_1446",
        "individualID": "1446",
        "species": "Mus musculus"
      },
      {
        "sample_id": "MS02_10",
        "r1_fastq": "MS02_10.1.fastq.gz",
        "r2_fastq": "MS02_10.2.fastq.gz",
        "diagnosis": "Neurofibromatosis type 2",
        "tumorType": "Schwannoma",
        "specimenID": "MS02_10",
        "individualID": "MS02",
        "species": "Mus musculus"
      }
    ]
  ]
}
